{
  "name": "loopback-component-bunyan",
  "version": "0.0.7",
  "description": "Bunyan logger component for loopback",
  "main": "index.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "NODE_ENV=test istanbul cover node_modules/.bin/_mocha -- ${MOCHA_OPTS}",
    "test:no-cover": "NODE_ENV=test mocha",
    "test:debug": "npm run test:no-cover -- --debug-brk",
    "posttest": "nsp check",
    "commitmsg": "validate-commit-msg"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/6RiverSystems/loopback-component-bunyan.git"
  },
  "keywords": [
    "loopback",
    "component",
    "logger",
    "bunyan"
  ],
  "author": "Josh Pollak <josh@6river.com> (http://6river.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/6RiverSystems/loopback-component-bunyan/issues"
  },
  "homepage": "https://github.com/6RiverSystems/loopback-component-bunyan#readme",
  "dependencies": {
    "bunyan": "1.8.4",
    "bunyan-logsene": "git+https://github.com/6RiverSystems/bunyan-logsene.git#v0.0.3",
    "bunyan-prettystream": "0.1.3",
    "le_node": "^1.7.0",
    "lodash": "4.16.4",
    "logdna": "1.2.2",
    "nsp": "^2.6.3"
  },
  "devDependencies": {
    "chai": "3.5.0",
    "cz-conventional-changelog": "^2.0.0",
    "eslint": "3.8.1",
    "eslint-config-defaults": "9.0.0",
    "husky": "^0.13.4",
    "loopback": "2.36.0",
    "mocha": "3.1.2",
    "sinon": "1.17.6",
    "sinon-chai": "2.8.0",
    "supertest": "2.0.1",
    "validate-commit-msg": "^2.12.2"
  },
  "config": {
    "validate-commit-msg": {
      "types": [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "test",
        "chore"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": "Follow <type>(<scope>): <subject> pattern, max 100 chars.",
      "autoFix": false
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
